.chat


  .chat__current-group
    .chat__current-group__name(data-group-id="#{@group.id}")
      = @group.name
    = link_to edit_group_path(params[:group_id]),method: :get,class: "chat__current-group__edit-btn" do
      Edit
    .chat__current-group__member
      Member: 
      - @users.each do |user|
        = user.name




  .chat__main
    = render partial: "message" , collection: @messages



  .form
    = form_for [@group, @message] do |f| 
      .form__wrapper   
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'